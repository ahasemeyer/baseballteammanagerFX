      </HBox>
      <Button layoutX="435.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleLookup" text="Lookup" />
      <TableView layoutX="175.0" layoutY="134.0" prefHeight="70.0" prefWidth="417.0">
        <columns>
          <TableColumn prefWidth="51.0" text="C1" />
          <TableColumn prefWidth="49.0" text="C2" />
        </columns>
      </TableView>
      <ImageView fx:id="profilePicture" fitHeight="150.0" fitWidth="133.0" layoutX="25.0" layoutY="67.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/defaultProfile.jpg" />
         </image>
      </ImageView>
      <FlowPane layoutX="175.0" layoutY="57.0" prefHeight="49.0" prefWidth="351.0">
         <children>
            <Label prefHeight="17.0" prefWidth="50.0" text="Name:" />
