            <Label fx:id="playerIDlbl" prefHeight="17.0" prefWidth="55.0" />
            <Label prefHeight="17.0" prefWidth="52.0" text="Team: " />
            <Label fx:id="teamNamelbl" prefHeight="17.0" prefWidth="167.0" />
            <Label prefHeight="17.0" prefWidth="65.0" text="Position:" />
            <Label fx:id="positionlbl" prefHeight="17.0" prefWidth="55.0" />
         </children>
      </FlowPane>
   </children>
</AnchorPane>
